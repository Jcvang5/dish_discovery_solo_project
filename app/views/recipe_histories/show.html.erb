<body class="bodyBackground">
<div>
  <h2><%= "Recipe History" %></h2>
  
  <% @recipe_history.recipes.each do |recipe| %>
    <div class ="recipeBorder">
      <h3><%= recipe.title %></h3>
      <p><strong>Ingredients:</strong> <%= recipe.ingredients %></p>
      <p><strong>Instructions:</strong> <%= recipe.instructions %></p>

      <%= link_to "Edit this recipe", edit_recipe_history_recipe_path(@recipe_history, recipe) %> |
      <%= button_to "Delete this recipe", [@recipe_history, recipe], method: :delete %>
    </div>
  <% end %>


  <%= link_to "Back to recipe history", recipe_histories_path %>
  
</div>
