<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <p>
      <%= link_to "Show this recipe", recipe_history_recipe_path(@recipe_history, recipe) %>
    </p>
  <% end %>
</div>

<%= link_to "New recipe", new_recipe_history_recipe_path %>

<%= link_to "Show this recipe history", recipe_histories_path %>
